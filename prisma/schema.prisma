generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MenuSection {
  id        String      @id @default(cuid())
  key       String      @unique        // e.g. "HOT_DOGS"
  title     String
  items     MenuItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model MenuItem {
  id        String      @id @default(cuid())
  section   MenuSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId String

  code      String      // what you're editing in "Item ID (internal)"
  label     String
  price     String
  active    Boolean     @default(true)
  sortOrder Int         @default(0)

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@unique([sectionId, code])
}

model Theme {
  id          String   @id            // e.g. "classic-blue", "retro-red"
  label       String                  // e.g. "Classic Blue", "Retro Red"
  description String?                 // optional helper text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  groups      Group[]
}

model Group {
  id        String   @id             // e.g. "default", "service1", etc
  themeId   String?
  theme     Theme?   @relation(fields: [themeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
